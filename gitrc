# git config --global include.path "~/.config/gitrc"
[alias]
	ad = add
	br = branch
	ch = checkout
	co = commit
	di = diff
	fe = fetch
	lg = log --oneline --pretty=format:\"%C(auto)%h%d %D %Cgreen%x09%an%Cblue%x09%ad%Creset%x09%s\"
	pu = pull
	re = rebase
	st = status
	up = push
[core]
	editor = vim
	pager = less
[format]
	pretty = oneline
[init]
	defaultBranch = main
[pager]
	branch = false
	log = false
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoStash = true